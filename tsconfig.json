{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "paths": {
      "@flow/*": ["./packages/*/src"]
    }
  },
  "include": [
    "packages/*/src"
  ]
}
